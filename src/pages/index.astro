---
import GetInTouchButton from "../components/Buttons/GetInTouchButton.astro";
import Card from "../components/Card/Card.astro";
import MainTitle from "../components/MainTitle/MainTitle.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="digitowly">
  <main>
    <MainTitle />
    <div
      class="relative z-40 mt-24 flex w-full flex-col items-center justify-center"
    >
      <p class="relative z-40 pb-5 text-white">
        sustainable app and web experiences with modern technologies
      </p>
      <GetInTouchButton />
      <div class="mt-[230px]"></div>
      <section class="relative z-40 flex w-full justify-between">
        <Card
          icon="web"
          title="Websites"
          body="This is just some placeholder.."
        />
        <span class="pl-10"></span>
        <Card
          icon="app"
          title="Websites"
          body="This is just some placeholder.."
        />
      </section>
    </div>
  </main>
</Layout>
