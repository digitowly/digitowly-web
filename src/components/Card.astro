---
import WebIcon from "./Card/Icons/WebIcon.astro";

interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<div class="relative flex w-full items-center justify-center">
  <span class="absolute -top-[150px] z-10">
    <WebIcon />
  </span>
  <div
    class="bg-dark border-iceblue relative z-30 w-full rounded-lg border-2 p-5 text-white"
  >
    <h2 class="pb-3 text-center font-bold">
      {title}
    </h2>
    <p>
      {body}
    </p>
  </div>
</div>
